{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NavigatorPlan",
  "type": "object",
  "required": ["tasks"],
  "properties": {
    "goal": { "type": "string" },
    "assumptions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["role", "prompt"],
        "properties": {
          "role": { "type": "string" },
          "prompt": { "type": "string" },
          "acceptance": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
